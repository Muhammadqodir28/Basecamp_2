<a href='/projects/{{projectId}}/add-thread/' class='btn btn-dark btn-lg mb-5'>Add thread</a>
<div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3'>
    {{#each threads}}
    <div class='col'>
      <div class='card shadow-sm'>
        <div class='card-body'>
          <p class='card-text fw-bold'> {{title}} </p>
          <div class='d-flex justify-content-between align-items-center'>
            <p class='p-0 m-0'> {{formatDate createdAt}} </p>
          </div>
        </div>
        <div class='card-footer'>
          <div class='btn-group btn-group-sm' role='group' aria-label='Basic example'>
            {{#if @root.token}}
              {{#if isAdmin}}
                <a type='button' class='btn btn-outline-secondary' href='/projects/{{../projectId}}/threads/edit-thread/{{_id}}'>Edit</a>
                <form action='/projects/{{../projectId}}/threads/delete-thread/{{_id}}' method='post' class='m-0 btn btn-outline-danger'>
                  <button type='submit' class='delete-btn'>Delete</button>
                </form>
              {{/if}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
</div>

