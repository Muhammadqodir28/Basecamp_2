<div class='row'>
	<div class='col-md-6'>
		<div class='w-75 mx-auto'>
			<p class='fs-1'>Add Message</p>
			{{#if errorAddMessage}}
			<div class='alert alert-danger alert-dismissible fade show' role='alert'>
				<strong>Error!</strong>
				{{errorAddMessage}}
				<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
			</div>
			{{/if}}
			<form action='/projects/{{projectId}}/add-message' method='post'>
				<div class='form-floating mb-3'>
					<input type='text' class='form-control' name='title' id='floatingInput' placeholder='Name'>
					<label for='floatingInput'>Your Name</label>
				</div>
				<div class='form-floating mb-3'>
					<textarea class='form-control' placeholder='Description' name='description' id='floatingTextarea2'
						style='height: 100px'></textarea>
					<label for='floatingTextarea2'>Description</label>
				</div>
				<button type='submit' class='btn btn-warning mt-3'>Add message</button>
			</form>
		</div>
	</div>
</div>
